# {{ ansible_managed }}

[Unit]
Description=Atlassian Bitbucket
After=syslog.target network.target

[Service]
Type=forking
User={{ bitbucket_owner }}
Group={{ bitbucket_group }}
ExecStart={{ bitbucket_catalina }}/bin/start-bitbucket.sh
ExecStop={{ bitbucket_catalina }}/bin/stop-bitbucket.sh
PIDFile={{ bitbucket_home }}/log/bitbucket.pid

[Install]
WantedBy=multi-user.target
